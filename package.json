	},
	"license": "ISC",
	"dependencies": {
		"gulp": "^3.9.1",
		"jquery": "^3.3.1",
		"jquery-ui": "^1.12.1",
		"jquery-ui-dist": "^1.12.1",
		"js-datepicker": "^2.3.1",
		"moment": "^2.22.0",
		"parse": "^1.11.1",
		"tiny-date-picker": "^3.2.4"
	},
	"devDependencies": {
		"electron-windows-installer": "^1.7.8",
		"electron-winstaller": "^2.6.4",
		"bootstrap": "^4.0.0",
		"codesign": "0.0.9",
		"electron": "^1.8.4",
		"electron-builder": "^20.5.1",
		"electron-installer-dmg": "^0.2.1",
		"electron-installer-windows": "^1.0.2",
		"electron-reload": "^1.2.2",
		"jquery": "^3.3.1",
		"parse": "^1.11.1"
	},
	"build": {
		"asar": true,
		"npmRebuild": false,
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": true,
			"warningsAsErrors": false,
			"perMachine": true
		},
		"publish": {
			"provider": "generic"
		}
	}
